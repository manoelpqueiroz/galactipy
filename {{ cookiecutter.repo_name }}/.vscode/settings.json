{% raw %}{
    "files.exclude": {
        "**/__pycache__": true,
        "**/.ipynb_checkpoints": true
    },
    "editor.lineNumbers": "relative",
    {%- endraw %}{% if cookiecutter.docstring_length == cookiecutter.line_length %}
    "editor.rulers": [{{ cookiecutter.line_length }}],
    {%- else %}
    "editor.rulers": [{{ cookiecutter.docstring_length }}, {{ cookiecutter.line_length }}],
    {%- endif %}{% raw %}
    "editor.scrollBeyondLastLine": false,
    "editor.cursorStyle": "underline",
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "terminal.integrated.enablePersistentSessions": false,
    "workbench.localHistory.enabled": false,
    "workbench.editor.enablePreview": false,
    "workbench.settings.editor": "json",
	"workbench.editor.closeOnFileDelete": true,
	"workbench.startupEditor": "readme",
    "git.suggestSmartCommit": false,
    "git.allowNoVerifyCommit": false,
	"git.closeDiffOnOperation": true,
    "git.pruneOnFetch": true,
	"git.pullBeforeCheckout": true,
    "diffEditor.renderSideBySide": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "debug.toolBarLocation": "docked",
	"debug.terminal.clearBeforeReusing": true,
	"debug.showVariableTypes": true,
    "explorer.autoReveal": true,
    "python.terminal.activateEnvInCurrentTerminal": true,
	"python.terminal.activateEnvironment": true,
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [
        "--strict-markers",
        "--tb=short",
        "--doctest-modules",
        "--doctest-continue-on-failure",
        "--pikachu",
        "--cov={% endraw %}{{ cookiecutter.package_name }}{% raw %}",
        "--cov-config=pyproject.toml"
    ],
    "[python]": {
        "editor.bracketPairColorization.enabled": false
    },
    "[markdown]": {
        "editor.tabSize": 2
    },
    "[dockerfile]": {
        "editor.tabSize": 2
    },
    "todo-tree.tree.labelFormat": "${after}",
    "todo-tree.highlights.defaultHighlight": {
        "foreground": "#444444",
        "background": "#FFFFFF",
        "fontWeight": "bold",
    },
    "todo-tree.highlights.customHighlight": {
        "TODO": {
            "icon": "alert",
            "iconColour": "#e69b39"
        },
        "CHECKLIST": {
            "icon": "tasklist",
            "iconColour": "#39e673"
        },
        "UPDATEME": {
            "icon": "pencil",
            "iconColour": "#e65339"
        },
        "BUG": {
            "icon": "bug",
            "iconColour": "#e63946",
            "foreground": "#e63946"
        },
        "REFACTOR": {
            "icon": "issue-reopened",
            "iconColour": "#4a39e6",
            "foreground": "#4a39e6"
        },
        "FIXME": {
            "icon": "tools",
            "iconColour": "#e63946",
            "foreground": "#e63946"
        },
        "HACK": {
            "icon": "cpu",
            "iconColour": "#e6399e"
        }
    },
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "FIXIT",
        "FIX",
        "NEEDSWORK",
        "UPDATEME",
        "TODO",
        "REFACTOR",
        "[ ]"
    ],
    "todo-tree.general.tagGroups": {
        "FIXME": [
            "FIXME",
            "FIXIT",
            "FIX",
            "NEEDSWORK"
        ],
        "CHECKLIST": [
            "[ ]"
        ]
    },
    "todo-tree.general.statusBar": "top three",
    "todo-tree.general.showIconsInsteadOfTagsInStatusBar": true,
    "todo-tree.filtering.excludeGlobs": [
        "**/node_modules/*/**", // Default for todo-tree
{%- endraw %}{%- if cookiecutter.__scm_platform_lc == 'github' %}
        "**/.github/PULL_REQUEST_TEMPLATE.md"
{%- else %}
        "**/.gitlab/merge_request_templates/*/**"
{%- endif %}
{%- if cookiecutter.app_type in ['tui', 'hybrid'] and cookiecutter.use_bdd %}
    ],
    "vsicons.associations.files": [
        {
            "icon": "css",
            "extensions": [
                "tcss"
            ],
            "format": "svg"
        },
    ],
    "vsicons.associations.folders": [
        {
            "icon": "app",
            "extensions": [
                "tui"
            ],
            "format": "svg"
        },
        {
            "icon": "model",
            "extensions": [
                "features"
            ],
            "format": "svg"
        }
    ],
    "files.associations": {
        "*.tcss": "css"
    }
{%- elif cookiecutter.app_type in ['tui', 'hybrid'] %}
    ],
    "vsicons.associations.files": [
        {
            "icon": "css",
            "extensions": [
                "tcss"
            ],
            "format": "svg"
        },
    ],
    "vsicons.associations.folders": [
        {
            "icon": "app",
            "extensions": [
                "tui"
            ],
            "format": "svg"
        }
    ],
    "files.associations": {
        "*.tcss": "css"
    }
{%- elif cookiecutter.use_bdd %}
    ],
    "vsicons.associations.folders": [
        {
            "icon": "model",
            "extensions": [
                "features"
            ],
            "format": "svg"
        }
    ]
{%- else %}
    ]
{%- endif %}{%- raw %}
}{% endraw %}
