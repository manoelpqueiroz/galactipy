{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "branchPrefix": "bot-",
  "commitMessageAction": "Renovate",
  "commitMessageExtra": "to {{updateType}} {{#if isPinDigest}}{{{newDigestShort}}}{{else}}version {{#if isMajor}}{{prettyNewMajor}}.0{{else}}{{prettyNewVersion}}{{/if}}{{/if}}",
  "constraints": {
    "python": "^3.10"
  },
  "extends": [
    "config:recommended",
    ":semanticCommitsDisabled",
    ":separateMajorReleases"
  ],
  "labels": [
    "maintenance::renovate"
  ],
  "prHourlyLimit": 1,
  "enabledManagers": [
    "poetry",
    "dockerfile",
    "gitlabci",
    "gitlabci-include",
    "github-actions"
  ],
  "lockFileMaintenance": {
    "automerge": false,
    "branchTopic": "lock-update",
    "commitMessagePrefix": ":pushpin:",
    "commitMessageAction": "Update",
    "commitMessageTopic": "`poetry.lock` contents",
    "enabled": true,
    "schedule": [
      "* * * * 1"
    ]
  },
  "packageRules": [
    {
      "enabled": true,
      "matchCategories": [
        "python"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "pin",
        "digest",
        "rollback",
        "bump"
      ],
      "commitBody": "Changelog: dependencies",
      "commitMessagePrefix": ":arrow_up:",
      "commitMessageTopic": "{{depName}}"
    },
    {
      "enabled": true,
      "matchManagers": [
        "gitlabci",
        "gitlabci-include"
      ],
      "commitBody": "Changelog: ci",
      "commitMessagePrefix": ":construction_worker:"
    },
    {
      "enabled": true,
      "automerge": true,
      "matchManagers": [
        "github-actions"
      ],
      "commitBody": "Changelog: template-config",
      "commitMessagePrefix": ":construction_worker:"
    },
    {
      "description": "Customize GitHub Artifact Actions group message",
      "enabled": true,
      "automerge": true,
      "matchManagers": [
        "github-actions"
      ],
      "matchPackageNames": [
        "docker/metadata-action",
        "docker/login-action",
        "docker/setup-buildx-action",
        "docker/build-push-action",
        "actions/first-interaction",
        "actions/checkout",
        "actions/setup-python",
        "snok/install-poetry",
        "actions/upload-artifact",
        "actions/download-artifact",
        "pypa/gh-action-pypi-publish",
        "release-drafter/release-drafter",
        "actions/cache",
        "coverallsapp/github-action",
        "codacy/codacy-coverage-reporter-action"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "commitBody": "Changelog: template-config",
      "commitMessagePrefix": ":construction_worker:",
      "groupName": "template GitHub actions"
    },
    {
      "enabled": true,
      "automerge": true,
      "matchCategories": [
        "docker"
      ],
      "commitBody": "Changelog: build",
      "commitMessagePrefix": ":hammer:"
    },
    {
      "description": "Ignore Python version-specific Docker images in CI",
      "enabled": false,
      "matchManagers": [
        "gitlabci"
      ],
      "matchPackageNames": [
        "registry.gitlab.com/galactipy/docker"
      ]
    },
    {
      "description": "Group Poetry plugins",
      "groupName": "Poetry plugins",
      "matchPackageNames": [
        "/^poetry-plugin-/",
        "/^poetry-dynamic-/",
        "poetry-bumpversion"
      ]
    },
    {
      "description": "Group linting and formatting tools",
      "groupName": "linting tools",
      "matchPackageNames": [
        "ruff",
        "mypy",
        "mypy-extensions",
        "bandit"
      ]
    },
    {
      "description": "Group testing tools",
      "groupName": "testing tools",
      "matchPackageNames": [
        "/^pytest/",
        "coverage"
      ]
    },
    {
      "description": "Group remaining dev tools",
      "groupName": "general development tools",
      "matchPackageNames": [
        "bandit",
        "pre-commit",
        "invoke"
      ]
    },
    {
      "description": "Group foundational libraries for applications",
      "groupName": "foundational libraries",
      "matchPackageNames": [
        "typer",
        "click",
        "rich",
        "textual",
        "platformdirs",
        "dynaconf",
        "orbittings",
        "loguru",
        "nebulog"
      ]
    },
    {
      "description": "Group foundational libraries for templates",
      "groupName": "foundational template libraries",
      "matchPackageNames": [
        "cookiecutter",
        "kedro"
      ]
    },
    {
      "addLabels": [
        "manual-check"
      ],
      "automerge": false,
      "description": "More cautious with production dependencies",
      "matchDepTypes": [
        "dependencies"
      ]
    },
    {
      "addLabels": [
        "internals::toolset"
      ],
      "automerge": true,
      "description": "Automerge minor and patch dev dependencies",
      "matchDepTypes": [
        "dev",
        "docs"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "addLabels": [
        "manual-check"
      ],
      "automerge": false,
      "description": "Require approval for major updates",
      "matchCategories": ["python"],
      "matchUpdateTypes": [
        "major"
      ]
    }
  ],
  "poetry": {
    "managerFilePatterns": [
      "/pyproject\\.toml$/"
    ]
  }
}
